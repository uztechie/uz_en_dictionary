<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    android:layout_margin="4dp">

    <RelativeLayout
        android:background="@color/glass"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginEnd="8dp"
            android:layout_toLeftOf="@id/adapter_favorite_delete"
            android:textStyle="bold"
            android:textColor="@color/colorOnGlass"
            android:textSize="16sp"
            android:id="@+id/adapter_favorite_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/adapter_favorite_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="4dp"
            android:src="@drawable/ic_baseline_close_24"
            app:tint="@color/colorOnGlass" />
    </RelativeLayout>




</androidx.cardview.widget.CardView>